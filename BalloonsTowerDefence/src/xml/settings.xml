<?xml version="1.0" encoding="UTF-8"?>
<!-- Abinash Singh settings.xml I Made this to store native texture paths 
	tower upgrade tiers and External sprite sheets also game settings -->
<Settings>
	<Main id="main">
		<SpriteSheets>
			<ExternalSpriteSheet name="In_Game"
				ImagePath="src/resources/sprite_sheets/InGame_BTD/InGame.png"
				XMLPath="src/resources/sprite_sheets/InGame_BTD/InGame.xml" />
			<ExternalSpriteSheet name="In_Game_HUD"
				ImagePath="src/resources/sprite_sheets/InGame_BTD/in_game_hud.png"
				XMLPath="src/resources/sprite_sheets/InGame_BTD/in_game_hud.xml" />
			<ExternalSpriteSheet name="In_Game_Custom"
				ImagePath="src/resources/sprite_sheets/Custom_Textures/InGameCustom.png"
				XMLPath="src/resources/sprite_sheets/Custom_Textures/In_Game_Custom.xml" />
		</SpriteSheets>
		<Textures id="textures">
			<TexturePath name="RedBalloon" path="balloon_red" />
			<TexturePath name="SuperMonkey" path="supermonkey" ImagePath="resources/supermonkey.png" />
			<TexturePath name="BlueBalloon" path="balloon_red" />
			<TexturePath name="DartMonkey" path="DartMonkey" />
			<TexturePath name="NinjaMonkey" path="balloon_red" />
			<TexturePath name="black" path="black" />
			<TexturePath name="black-translucent" path="black-translucent" />
			<TexturePath name="NinjaMonkey" path="NinjaMonkey" />
			<TexturePath name="NinjaMonkey_ninjaStar_Normal" path="NinjaMonkey_starNormal" />
		</Textures>
		<GameSettings>
			<Setting fps="20" />
		</GameSettings>
		<Towers>
			<Tower name="DartMonkey" TextureName="DartMonkey" />
			<Tower name="NinjaMonkey" TextureName="NinjaMonkey" />
		</Towers>
	</Main>
</Settings>